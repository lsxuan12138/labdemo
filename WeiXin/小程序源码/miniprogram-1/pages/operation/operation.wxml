<!--pages/operation/operation.wxml-->
<text>修改或者编辑</text>
<view class="container">
  <form bindsubmit="formSubmit" bindreset="formReset">
  <view class="row">
  <text>区域名：</text>
  <input type="text" name="areaName" placeholder="请输入地区名称" value="{{areaName}}" />
  </view>
  <view class="row">
  <text>优先级：</text>
  <input type="number" name="priority" placeholder="请输入地区名称" value="{{priority}}" />
  </view>
  <view class="row">
    <button type="primary" form-type="submit">提交</button>
    <button type="primary" form-type="reset">清空</button>
  </view>
  
</form>
</view>
