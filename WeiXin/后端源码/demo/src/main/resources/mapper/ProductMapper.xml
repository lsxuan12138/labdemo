<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.school.dao.ProductDao">
    <select id="queryProduct" resultType="com.school.entity.Product">
        select  * from t_product order by id desc
    </select>

    <select id="findByName" resultType="com.school.entity.Product">
        select  * from t_product where  name=#{name}
    </select>
    <insert id="insertProduct" useGeneratedKeys="true" keyProperty="id" keyColumn="id" parameterType="com.school.entity.Product">
        insert into t_product (name,quantity,purchase_price,sell_price,create_time)values(#{name},#{quantity},#{purchasePrice},#{sellPrice},#{createTime})
    </insert>
    <update id="updateProduct" parameterType="com.school.entity.Product">
        update t_product
        <set>
            <if test="name!=null">name=#{name},</if>
            <if test="quantity!=null">quantity=#{quantity},</if>
            <if test="purchasePrice!=null">purchase_price=#{purchasePrice},</if>
            <if test="sellPrcie!=null">sell_prcie=#{sellPrcie},</if>
            <if test="craeteTime!=null">craete_time=#{craeteTime},</if>
        </set>
        where id=#{id}
    </update>
    <delete id="deleteProduct">
        delete  from t_product where id=#{id}
    </delete>

</mapper>

